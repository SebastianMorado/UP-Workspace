html
  head
    meta(charset='utf-8')
    |   
    link(rel='shortcut icon', href='')
    |   
    title Workspace
    |   
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    |   
    link(rel='stylesheet', type='text/css', href='/css/register.css')
    |   
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400italic,400,500,600,700,800,900', rel='stylesheet')
    |   
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-lg.navbar-light
      a.navbar-brand(href='/')
        img#brand.d-inline-block.align-top(src='./images/assets-17.png', height='40', alt='')
      |     
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo02', aria-controls='navbarTogglerDemo02', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      |     
      #navbarTogglerDemo02.collapse.navbar-collapse.navbar-right
        ul.navbar-nav.ml-auto.mt-2.mt-lg-0
          li.nav-item
            a.nav-link(href='/registration') Register
          |         
          li#sign-in.nav-item
            a.nav-link(href='/signin') Sign-in
          |         
          li#sign-out.nav-item
            a.nav-link(href='./index.html') Sign-out
    |   
    .container-fluid
      .row(style='background-size: cover; background-position: center 60%; background-image: linear-gradient(rgba(35,35,35,0.5),rgba(35,35,35,0.5)), url(./images/bg_photo2.jpg);')
        .offset-md-2.col-md-8.search_bar
          h1
            | Help other students and workers find a work space by signing up and contributing information
    // This container displays when user successfully signs up
    #message_container.row
      .container
        #message
          .header
            br
            |           
            img(src='./images/success.png', height='22')
            |           
            h3 Successful Sign-up!
    // This container displays when user puts wrong credentials
    #invalid_container.row
      .container
        #message
          .header
            br
            |           
            img(src='./images/close.png', height='22')
            |           
            h3 Invalid email or password.
    |   
    .row
      // Taken from http://cssdeck.com/labs/sleek-sign-up
      #signup_container.container
        form#signup
          .header
            br
            |               
            h3 Sign In
            if message != null
              .alert.alert-success(role='alert') #{message}
          |           
          .sep
          |           
          .inputs
            input(type='email', placeholder='E-mail', autofocus='')
            |               
            input(type='password', placeholder='Password')
            |               
            a#submit(href='#') SIGN IN
    |   
    footer.footer-basic-centered
      p.footer-company-motto Finding the working space best fit for you.
      |     
      p.footer-links
        a(href='./index.html') Home
        |       &middot;
        |       
        a(href='#') About
        |       &middot;
        |       
        a(href='./register.html') Register
      |     
      p.footer-company-name MDB &amp; Co. &copy; 2018
    |   
