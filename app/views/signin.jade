    script.
      $(function(){
      //February 17, 2018, Sebastian Morado
      //initial code that checks the form input of the user and enables button when valid
      $('#search_button').on('click',function(){
      window.location.href = "./search_results.html";
      })
      $('#password').change(function(event){
      if($('#password').val().length >= 6 && $('#email').val().includes("@") && $('#email').val().length >= 6){
      $('#submit').prop('disabled', false);
      }
      else{
      $('#submit').prop('disabled', true);
      }
      });
      $('#email').change(function(event){
      if($('#password').val().length >= 6 && $('#email').val().includes("@") && $('#email').val().length >= 6){
      $('#submit').prop('disabled', false);
      }
      else{
      $('#submit').prop('disabled', true);
      }
      });
      })
